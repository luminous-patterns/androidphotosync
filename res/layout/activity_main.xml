<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/countPhotosRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelPhotosRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/photos_remaining" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#dddddd"
        android:orientation="vertical" >
    </LinearLayout>

    <Switch
        android:id="@+id/switchSyncEnabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onToggleClicked"
        android:text="@string/sync_title_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#dddddd"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/settingsbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:onClick="onSettingsClicked" />

    <Button
        android:id="@+id/syncFilesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_button"
        android:onClick="onUploadClicked" />

</LinearLayout>